<footer class="mt-20">
  <!-- CTA -->
  <section class="px-4 md:px-8 py-12">
    <div class="rounded-3xl bg-gradient-to-br from-purple-600/20 to-purple-400/10 border border-white/10 p-8 text-center shadow-lg">
      <h3 class="text-2xl md:text-3xl font-bold text-white mb-3">
        Interested in working together?
      </h3>
      <p class="text-white/70 mb-6">
        I’m open to collaborations, freelance work, or full-time roles.
      </p>

      <a
        href="mailto:williamarosado@gmail.com"
        class="group inline-flex items-center gap-2 rounded-full bg-purple-500 hover:bg-purple-400 transition text-white px-5 py-2 font-medium shadow"
      >
        <span>Send me a message</span>
        <svg
          class="w-4 h-4 transition-transform group-hover:translate-x-0.5"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          aria-hidden="true"
        >
          <path d="M22 2L11 13"></path>
          <path d="M22 2L15 22l-4-9-9-4L22 2z"></path>
        </svg>
      </a>
    </div>
  </section>

  <!-- Bottom bar -->
