    <div class="flex flex-col md:flex-row items-center justify-between gap-3 border-t border-white/10 pt-6">
      <p class="text-white/60 text-sm">
        © {year} William A. Rosado Pérez — All rights reserved.
      </p>

      <nav class="flex items-center gap-6">
        {socials.map((s) => (
          <a
            href={s.href}
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center gap-2 text-white/70 hover:text-white transition"
          >
            <span set:html={s.icon}></span>
            <span class="hidden sm:inline">{s.name}</span>
          </a>
        ))}
      </nav>
    </div>
  </section>
